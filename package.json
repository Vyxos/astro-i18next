{
  "name": "@vyxos/astro-i18next",
  "version": "0.2.0",
  "description": "I18next integration for Astro with dynamic namespace loading.",
  "author": {
    "name": "Marek Fodor",
    "email": "development@vyxos.eu",
    "url": "https://github.com/vyxos"
  },
  "private": false,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.js"
      },
      "require": {
        "types": "./dist/utils.d.cts",
        "default": "./dist/utils.cjs"
      }
    },
    "./middleware": {
      "import": {
        "types": "./dist/middleware.d.ts",
        "default": "./dist/middleware.js"
      },
      "require": {
        "types": "./dist/middleware.d.cts",
        "default": "./dist/middleware.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run lint && npm run clean && tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run test:ci && npm run lint",
    "postpublish": "git tag v$npm_package_version && git push origin v$npm_package_version",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-backend": "^3.0.2",
    "colorette": "^2.0.20",
    "pathe": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.31.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "husky": "^9.0.0",
    "i18next-resources-for-ts": "^1.6.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.15.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "astro": "^5.11.0",
    "react": "^19.1.0"
  },
  "peerDependenciesMeta": {
    "astro": {
      "optional": false
    }
  },
  "keywords": [
    "astro",
    "astro-integration",
    "i18n",
    "i18next",
    "internationalization",
    "localization",
    "typescript",
    "dynamic-loading",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vyxos/astro-i18next.git"
  },
  "bugs": {
    "url": "https://github.com/vyxos/astro-i18next/issues"
  },
  "homepage": "https://github.com/vyxos/astro-i18next#readme",
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
